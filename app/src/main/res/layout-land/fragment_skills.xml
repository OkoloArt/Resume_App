<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/dp_10"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".SkillsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/about_me_heading"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/about_me_header"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <View
            style="@style/Divider" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/about_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/about_me" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/company_added_value_heading"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:text="@string/values_header"
            android:layout_height="wrap_content" />

        <View
            style="@style/Divider" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/company_added_value"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/values_text"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        style="@style/HorizontalDivider" />

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/skills_heading"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:text="@string/skills"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_height="wrap_content" />

        <View
            style="@style/Divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/skills_recyclerview"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>